{
  "version": 2,
  "builds": [
    {
      "src": "routes/**/*.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/api",
      "dest": "/routes/api/"
    },
    {
      "src": "/",
      "dest": "/routes/"
    },
    {
      "src": "/api/login",
      "dest": "/routes/api/login/"
    },
    {
      "src": "/api/secret",
      "dest": "/routes/api/secret/"
    }
  ]
}
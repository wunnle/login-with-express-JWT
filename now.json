{
  "version": 2,
  "builds": [
    {
      "src": "routes/**/*.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/api",
      "dest": "/routes/api/"
    },
    {
      "src": "/",
      "dest": "/routes/index.js"
    },
    {
      "src": "/api/login",
      "dest": "/routes/api/login/index.js"
    },
    {
      "src": "/api/secret",
      "dest": "/routes/api/secret/index.js"
    }
  ]
}